---
layout: 'base-lns-blog.njk'
---
<main>

    <div class="main-panel-container" >
        <div><h3>Latest Speeches and Press Releases</h3></div>
        <div>
            <section>
                <div>
                    <h4 class="title-lns-blog">{{ title }}</h4>
                    <div class="name-date-tag">by<span class="name-tag" >{{ author }}</span>On<span class="date-tag">{{ date | postDate  }}</span></div>
                </div>

                <figure class="post-figure">
                    <div class="img-figcaption-wrapper">
                        <img src="{{ image1 }}" alt="{{ imageAlt1 }}">
                        <figcaption class="figcap">{{ imageAlt1 }}</figcaption>
                    </div>
                </figure>

                <section class="content-wrapper">
                    <article>
                        <p>{{ textBody1 }}</p>
                    </article>
                </section>
                
                {{ content | safe }}
                
                <figure class="post-figure">
                    <div class="img-figcaption-wrapper">
                        <img src="{{ image2 }}" alt="{{ imageAlt2 }}">
                        <figcaption class="figcap">{{ imageAlt2 }}</figcaption>
                    </div>
                </figure>

                <section class="content-wrapper">
                    <article>
                        <p>{{ textBody2 }}</p>
                    </article>
                </section>

                <figure class="post-figure">
                    <div class="img-figcaption-wrapper">
                        <img src="{{ image3 }}" alt="{{ imageAlt3 }}">
                        <figcaption class="figcap">{{ imageAlt3 }}</figcaption>
                    </div>
                </figure>

                <section class="content-wrapper">
                    <article>
                        <p>{{ textBody3 }}</p>
                    </article>
                </section><!---->

                
            </section>   
        </div>  
    </div>
    
</main>
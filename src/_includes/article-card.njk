<div class="info-card">
  <div class="headline-title">
    <h4>{{ post.data.title }}</h4>
  </div>
  <div class="name-date-tag">
    <span class="no-wrap">by <i class="fas fa-user-edit"></i></span>
    <span class="name-tag">{{ post.data.author }}</span>
    <span class="no-wrap">on <i class="far fa-calendar-alt"></i></span>
    <span class="date-tag">{{ post.date | postDate }}</span>
  </div>
  <div class="read-more-btn-wrapper-container">
    <a href="{{ post.url }}" class="read-more-btn">Read More</a>
  </div>
</div>

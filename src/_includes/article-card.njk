<div class="info-card">
    <div class="headline-title">
        <h4>{{ post.data.title }}</h4>
    </div>
    <div class="name-date-tag">by <i class="fas fa-user-edit"></i><span class="name-tag" >{{ post.data.author }}</span>on <i class="far fa-calendar-alt"></i><span class="date-tag">{{ post.date | postDate }}</span></div>
    <div class="read-more-btn"><a href="{{ post.url }}">Read More</a></div>
</div>